{
  "name": "forge",
  "version": "0.1.1",
  "description": "Forge - A universal package manager that forges packages across ecosystems",
  "main": "dist/index.js",
  "bin": {
    "forge": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "build:prod": "npm run clean && tsc --sourceMap false && chmod +x dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build:prod && npm test",
    "build:bundle": "esbuild src/cli.ts --bundle --platform=node --target=node18 --outfile=dist/cli.bundle.js --format=cjs",
    "build:bin": "npm run clean && tsc --sourceMap false && npm run build:bundle && pkg dist/cli.bundle.js --targets node18-macos-x64,node18-macos-arm64,node18-linux-x64,node18-linux-arm64,node18-win-x64 --output dist/forge",
    "build:deb": "bash scripts/build-deb.sh",
    "build:pkg": "bash scripts/build-pkg.sh",
    "build:choco": "bash scripts/build-choco.sh",
    "build:all": "npm run build:bin && npm run build:deb && npm run build:pkg && npm run build:choco",
    "publish:cloudsmith": "bash scripts/publish-cloudsmith.sh",
    "release": "npm run build:all && npm run publish:cloudsmith"
  },
  "keywords": [
    "universal-package-manager",
    "package-manager",
    "cli"
  ],
  "author": "Forge Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DRYRunOnly/Forge.git"
  },
  "bugs": {
    "url": "https://github.com/DRYRunOnly/Forge/issues"
  },
  "homepage": "https://github.com/DRYRunOnly/Forgee#readme",
  "dependencies": {
    "axios": "^1.2.0",
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "fs-extra": "^11.1.0",
    "ora": "^5.4.1",
    "semver": "^7.3.8",
    "tar": "^6.1.12"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/semver": "^7.3.13",
    "@types/tar": "^6.1.3",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "esbuild": "^0.20.0",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
