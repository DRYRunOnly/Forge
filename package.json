{
  "name": "forge",
  "version": "0.1.0",
  "description": "Forge - A universal package manager that forges packages across ecosystems",
  "main": "dist/index.js",
  "bin": {
    "forge": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "build:prod": "npm run clean && tsc --sourceMap false && chmod +x dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "package-manager",
    "node",
    "python",
    "maven",
    "universal",
    "forge",
    "universal"
  ],
  "author": "Forge Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.2.0",
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "fs-extra": "^11.1.0",
    "ora": "^5.4.1",
    "semver": "^7.3.8",
    "tar": "^6.1.12"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/semver": "^7.3.13",
    "@types/tar": "^6.1.3",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
